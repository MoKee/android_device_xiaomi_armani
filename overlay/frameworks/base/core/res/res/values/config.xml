<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <bool name="config_showNavigationBar">false</bool>
    
    <!-- Is the notification LED intrusive? Used to decide if there should be a disable option -->
    <bool name="config_intrusiveNotificationLed">true</bool>
    
    <!-- Is the battery LED intrusive? Used to decide if there should be a disable option -->
    <bool name="config_intrusiveBatteryLed">true</bool>

    <!-- Does the battery LED support multiple colors? Used to decide if the user can change the colors -->
    <bool name="config_multiColorBatteryLed">true</bool>
    
    <integer name="config_notificationsBatteryLowARGB">0xff200000</integer>
    <integer name="config_notificationsBatteryMediumARGB">0xff801010</integer>
    <integer name="config_notificationsBatteryFullARGB">0xff09fc00</integer>
    <integer name="config_notificationsBatteryLedOn">1000</integer>
    <integer name="config_notificationsBatteryLedOff">3000</integer>

    <!-- Default color for notification LED is red. -->
    <color name="config_defaultNotificationColor">#ffBF06E7</color>

    <!-- Default LED on time for notification LED in milliseconds. -->
    <integer name="config_defaultNotificationLedOn">800</integer>

    <!-- Default LED off time for notification LED in milliseconds. -->
    <integer name="config_defaultNotificationLedOff">3000</integer>


    <!-- Is the device capable of hot swapping an UICC Card -->
    <bool name="config_hotswapCapable">true</bool>

    <!-- Performance profiles -->
 <!--   <string name="config_perf_profile_prop">persist.sys.perf.profile</string>
    <string name="config_perf_profile_default_entry">1</string>  -->

    <!-- Whether to enable auto provisioning the app for new SIM card on boot.-->
    <bool name="config_auto_provision_enable">true</bool>
    
	<!-- Set to true if the RSSI should always display CDMA signal
         strength even on EVDO -->
    <bool name="config_alwaysUseCdmaRssi">true</bool>

    <bool name="config_enableWifiDisplay">true</bool>

    <!-- Enable the option to check proximity sensor when deciding whether to
     turn the screen on
     NOTE ! - Enable for devices that have a fast response proximity sensor -->
    <bool name="config_proximityCheckOnWake">true</bool>
    
</resources>
